@using Microsoft.AspNetCore.Http;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" /> 
    
    <title>@ViewData["Title"] - Dealership</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Dealership.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-sm nav-custom">
                <a class="navbar-brand ms-4" asp-page="/Index">
                    <img class="brand-logo" src="~/css/pictures/logo.png"
                         alt="logo">
                </a>
                <h2>Home Page</h2>
                    <!-- NavCollapse -->
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">

                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                        <li class="nav-item px-2">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>

                        <li class="nav-item px-2">
                                <a class="nav-link" asp-area="" asp-page="/Bikes">Our Bikes</a>
                            </li>

                        <li class="nav-item px-2">
                                <a class="nav-link" asp-area="" asp-page="/About">About Us</a>
                            </li>

                            <li class="nav-item px-2">
                                <a class="nav-link" asp-area="" asp-page="/Login">Account</a>
                            </li>

                        @if(Context.Session.GetInt32("UserId") != null)
                        {
                            <li class="nav-item px-2">
                                <a class="nav-link" asp-area="" asp-page="/Logout">Logout</a>
                            </li>
                        }
                    </ul>

                    </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <p class="mb-0">Sebastião Rodrigues</p>
                </div>
                <div class="col-md-6 text-md-right">
                    <p class="mb-0">S2-CB02</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



